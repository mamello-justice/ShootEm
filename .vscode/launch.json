            "environment": [
                {
                    "name": "PATH",
                    "value": "${workspaceFolder}/build/bin/Release;${env:PATH}"
                }
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake: Build Release"
        }
    ]
